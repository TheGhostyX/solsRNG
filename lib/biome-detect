local plr = game.Players.LocalPlayer
local MI = plr.PlayerGui.MainInterface
local Weather = MI.CurrentTime.Weather


Weather.Changed:Connect(function()
    if Weather.Text == "[ Corruption ]" then
        game:GetService("StarterGui"):SetCore("SendNotification",{
               Title = "Rare biome just spawned";
               Text = Weather.Text;
               Duration = 1;
            })
    end
    if Weather.Text == "[ Hell ]" then
        game:GetService("StarterGui"):SetCore("SendNotification",{
               Title = "Rare biome just spawned";
               Text = Weather.Text;
               Duration = 1;
            })
    end
    if Weather.Text == "[ Null ]" then
        game:GetService("StarterGui"):SetCore("SendNotification",{
               Title = "Rare biome just spawned";
               Text = Weather.Text;
               Duration = 1;
            })
    end
    if Weather.Text == "[ Starfall ]" then
        game:GetService("StarterGui"):SetCore("SendNotification",{
               Title = "Rare biome just spawned";
               Text = Weather.Text;
               Duration = 1;
            })
    end
end)
